\ProvidesPackage{adkore}

\newcommand{\frontmatter}[4]{%
    \noindent
    \fbox{\parbox{\textwidth}{%
            \textsc{\textbf{Type}}: #1
            \hfill
            \textbf{Title}: #2
            \hfill 
            \textbf{Status}: #3
            % O = Omitted
            % ON = Ongoing
            % D = Deprecated
            % X = Executed
            % BL = Backlogged

            \vspace{0.17cm}
            \textbf{Context}: #4
    }}
    \\
}

\newcommand{\strategy}[4]{%    

    \vspace{0.17cm}
    {\hfill}\normalsize{\textbf{Core Decision}: #1}{\hfill}

    \noindent
    \begin{center}
        \begin{tblr}{
                colspec = {|p{0.3\textwidth}|p{0.3\textwidth}|p{0.3\textwidth}|},
                row{1} = {halign = c}
            }
            \hline
        \raisebox{-0.5ex}{{\hfill}\textbf{Prospects}{\hfill}\vspace{0.1cm}} & \raisebox{-0.5ex}{{\hfill}\textbf{Decision Parameters}{\hfill}\vspace{0.1cm}} & \raisebox{-0.5ex}{{\hfill}\textbf{0TD Concerns}{\hfill}\vspace{0.1cm}} \\
            \hline
            \begin{minipage}[t]{0.3\textwidth}
                \vspace*{0.011cm}
                #2
            \end{minipage}
            \vspace{0.1cm} &
            \begin{minipage}[t]{0.3\textwidth}
                \vspace*{0.011cm}
                #3
            \end{minipage}
            \vspace{0.1cm} &
            \begin{minipage}[t]{0.3\textwidth}
                \vspace*{0.011cm}
                #4
            \end{minipage}
            \vspace{0.1cm}
            \\
            \hline
        \end{tblr}
    \end{center}
} 

